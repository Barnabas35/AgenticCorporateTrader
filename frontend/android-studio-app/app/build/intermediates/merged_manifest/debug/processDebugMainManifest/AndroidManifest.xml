<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.act_app"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="24"
        android:targetSdkVersion="34" />

    <!-- Add Internet permission -->
    <uses-permission android:name="android.permission.INTERNET" />

    <permission
        android:name="com.example.act_app.DYNAMIC_RECEIVER_NOT_EXPORTED_PERMISSION"
        android:protectionLevel="signature" />

    <uses-permission android:name="com.example.act_app.DYNAMIC_RECEIVER_NOT_EXPORTED_PERMISSION" />

    <application
        android:allowBackup="true"
        android:appComponentFactory="androidx.core.app.CoreComponentFactory"
        android:debuggable="true"
        android:extractNativeLibs="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:testOnly="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar" > <!-- App theme -->


        <!-- Main Activity (launcher activity) -->
        <activity
            android:name="com.example.act_app.MainActivity"
            android:exported="true" > <!-- Exported because it has MAIN/LAUNCHER intent-filter -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Login Activity -->
        <activity
            android:name="com.example.act_app.LoginActivity"
            android:exported="false" /> <!-- Internal activity -->


        <!-- Register Activity -->
        <activity
            android:name="com.example.act_app.RegisterActivity"
            android:exported="false" /> <!-- Internal activity -->


        <!-- My Assets Activity -->
        <activity
            android:name="com.example.act_app.MyAssetsActivity"
            android:exported="false" /> <!-- Internal activity -->


        <!-- Stock Activity -->
        <activity
            android:name="com.example.act_app.StockActivity"
            android:exported="false" /> <!-- Added StockActivity -->


        <!-- Menu Activity (optional, for burger menu navigation) -->
        <activity
            android:name="com.example.act_app.MenuActivity"
            android:exported="false" /> <!-- Added MenuActivity -->

        <provider
            android:name="androidx.startup.InitializationProvider"
            android:authorities="com.example.act_app.androidx-startup"
            android:exported="false" >
            <meta-data
                android:name="androidx.emoji2.text.EmojiCompatInitializer"
                android:value="androidx.startup" />
            <meta-data
                android:name="androidx.lifecycle.ProcessLifecycleInitializer"
                android:value="androidx.startup" />
            <meta-data
                android:name="androidx.profileinstaller.ProfileInstallerInitializer"
                android:value="androidx.startup" />
        </provider>

        <receiver
            android:name="androidx.profileinstaller.ProfileInstallReceiver"
            android:directBootAware="false"
            android:enabled="true"
            android:exported="true"
            android:permission="android.permission.DUMP" >
            <intent-filter>
                <action android:name="androidx.profileinstaller.action.INSTALL_PROFILE" />
            </intent-filter>
            <intent-filter>
                <action android:name="androidx.profileinstaller.action.SKIP_FILE" />
            </intent-filter>
            <intent-filter>
                <action android:name="androidx.profileinstaller.action.SAVE_PROFILE" />
            </intent-filter>
            <intent-filter>
                <action android:name="androidx.profileinstaller.action.BENCHMARK_OPERATION" />
            </intent-filter>
        </receiver>
    </application>

</manifest>