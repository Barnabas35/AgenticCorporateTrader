<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.act_app">

    <!-- Add Internet permission -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar"> <!-- App theme -->

        <!-- Main Activity (launcher activity) -->
        <activity
            android:name=".MainActivity"
            android:exported="true"> <!-- Exported because it has MAIN/LAUNCHER intent-filter -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Login Activity -->
        <activity
            android:name=".LoginActivity"
            android:exported="false" /> <!-- Internal activity -->

        <!-- Register Activity -->
        <activity
            android:name=".RegisterActivity"
            android:exported="false" /> <!-- Internal activity -->

        <!-- My Assets Activity -->
        <activity
            android:name=".MyAssetsActivity"
            android:exported="false" /> <!-- Internal activity -->

        <!-- Stock Activity -->
        <activity
            android:name=".StockActivity"
            android:exported="false" /> <!-- Internal activity -->

        <!-- Menu Activity -->
        <activity
            android:name=".MenuActivity"
            android:exported="false" /> <!-- Internal activity -->

        <!-- Profile Activity -->
        <activity
            android:name=".ProfileActivity"
            android:exported="false" /> <!-- Internal activity -->

        <!-- Review Page Activity -->
        <activity
            android:name=".ReviewPageActivity"
            android:exported="false" /> <!-- Internal activity -->

    </application>

</manifest>
